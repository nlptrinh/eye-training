<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="frag"
            type="kr.ac.unist.fragment.survey.FragSurvey4" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@dimen/intro_top_margin"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/rgb_333333"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="5.3sp"
                android:text="Quiz 3."
                android:textColor="@color/rgb_333333"
                android:textSize="16dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="5.3sp"
                android:text="@string/quiz_3_1"
                android:textColor="@color/rgb_333333"
                android:textSize="21dp"
                android:textStyle="normal" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="@{()->frag.clickQuiz(1)}">

                            <TextView
                                android:id="@+id/tv_quiz_1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.03"
                                android:lineSpacingExtra="-4.7sp"
                                android:text="100"
                                android:textColor="@color/rgb_de000000"
                                android:textSize="21dp" />

                            <ImageView
                                android:id="@+id/iv_quiz_1"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_alignParentRight="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_icon_action_check_circle_px">

                            </ImageView>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:onClick="@{()->frag.clickQuiz(2)}"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_quiz_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.03"
                                android:lineSpacingExtra="-4.7sp"
                                android:text="93"
                                android:textColor="@color/rgb_de000000"
                                android:textSize="21dp" />

                            <ImageView
                                android:id="@+id/iv_quiz_2"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_alignParentRight="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_icon_action_check_circle_px">

                            </ImageView>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:onClick="@{()->frag.clickQuiz(3)}"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_quiz_3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.03"
                                android:lineSpacingExtra="-4.7sp"
                                android:text="86"
                                android:textColor="@color/rgb_de000000"
                                android:textSize="21dp" />

                            <ImageView
                                android:id="@+id/iv_quiz_3"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_alignParentRight="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_icon_action_check_circle_px">

                            </ImageView>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:onClick="@{()->frag.clickQuiz(4)}"
                        card_view:cardCornerRadius="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_quiz_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:letterSpacing="0.03"
                                android:lineSpacingExtra="-4.7sp"
                                android:text="73"
                                android:textColor="@color/rgb_de000000"
                                android:textSize="21dp" />

                            <ImageView
                                android:id="@+id/iv_quiz_4"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_alignParentRight="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_icon_action_check_circle_px">

                            </ImageView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/border_corner_log_in"
            android:gravity="center"
            android:text="다음 문제로"
            android:onClick="@{frag::clickNext}"
            android:textColor="@color/rgb_333333"
            android:textSize="20dp"
            android:textStyle="normal" />

    </RelativeLayout>

</layout>