<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EyeTraining" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/rgb_eeeeee</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rgb_eeeeee</item>
        <item name="colorSecondaryVariant">@color/rgb_eeeeee</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rgb_6200ee</item>
        <item name="colorOnSurface">@color/rgb_0b000000</item>
    </style>
    <style name="CustomTextAppearance" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="android:textSize">6dp</item>
        <item name="colorSecondary">@color/rgb_99000000</item>
        <item name="android:textColorHint">@color/rgb_99000000</item>
        <item name="android:textColor">@color/rgb_99000000</item>
        <item name="colorControlNormal">@color/rgb_6200ee</item>
        <item name="colorControlActivated">@color/rgb_6200ee</item>
    </style>

    <style name="CommonRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/rgb_99000000</item>
        <item name="colorControlActivated">@color/rgb_6200ee</item>
    </style>

    <style name="CustomSpinner" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/CustomSpinnerOverlayOutlinedDense</item>
    </style>

    <style name="CustomSpinnerOverlayOutlinedDense">
        <item name="editTextStyle">@style/CustomSpinnerTextInputEditText_outlinedBox_dense_h
        </item>
    </style>

    <style name="CustomSpinnerTextInputEditText_outlinedBox_dense_h" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
</resources>